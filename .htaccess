# BingeTV Master .htaccess Configuration
# Routes clean URLs to the public directory or app binaries

RewriteEngine On

# Set the base directory
RewriteBase /

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Prevent directory listing and disable MultiViews
Options -Indexes -MultiViews

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Remove the Content-Security-Policy from here as it's too restrictive
    # and can be set in PHP if needed
</IfModule>
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://code.jquery.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; img-src 'self' data: https:; font-src 'self' https://cdnjs.cloudflare.com;"
</IfModule>

# --- Static Assets Routing ---
# Route css/js/images/assets to the public directory
RewriteRule ^(css|js|images|assets|gateway)/(.*)$ public/$1/$2 [L]

# --- Admin Section ---
# Handle admin routes
RewriteRule ^admin/([^/]+)/?$ admin/$1.php [L]
RewriteRule ^admin/([^/]+)/([^/]+)/?$ admin/$1/$2.php [L]

# --- User Section ---
# Handle user routes
RewriteRule ^user/([^/]+)/?$ user/$1.php [L]
RewriteRule ^user/([^/]+)/([^/]+)/?$ user/$1/$2.php [L]

# --- Clean URLs Logic ---
# 1. Redirect .php extension URLs to clean URLs (external redirect)
# Exempt POST requests to prevent data loss during form submissions
RewriteCond %{REQUEST_METHOD} !POST
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# 2. Map clean URLs to .php files if they exist (internally)
# Root directory - serve public/index.php
RewriteRule ^$ public/index.php [L]

# 3. Check if the request is for a file in public directory
RewriteCond %{DOCUMENT_ROOT}/public/$1.php -f
RewriteRule ^([^/]+)/?$ public/$1.php [L]

# 4. Handle API routes
RewriteRule ^api/([^/]+)/?$ public/api/$1.php [L]

# 5. General rule for PHP files in subdirectories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L]

# 6. Special case for /apps
RewriteRule ^apps/?$ public/apps.php [L]
RewriteRule ^apps/(.+)$ app-binaries/$1 [L]

# --- Performance ---
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# --- Compression ---
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# --- Security ---
# Block access to sensitive files
<FilesMatch "^\.|composer\.json|composer\.lock|package\.json|package-lock\.json|yarn\.lock|webpack\.config\.js|gulpfile\.js|README\.md|CHANGELOG\.md|LICENSE\.txt|\.gitignore|.*\.md$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to all .env files
<FilesMatch "\.env">
    Order allow,deny
    Deny from all
</FilesMatch>

# Disable directory browsing
Options -Indexes

# Disable server signature
ServerSignature Off
