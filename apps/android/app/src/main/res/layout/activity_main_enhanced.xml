<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:orientation="horizontal">

    <!-- 1. Main Navigation Rail -->
    <ScrollView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/background_sidebar"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/nav_rail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">
            
            <TextClock
                android:id="@+id/clock_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="h:mm a"
                android:format24Hour="HH:mm"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />
            
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon"
                android:layout_marginBottom="24dp"
                android:contentDescription="@string/app_name" />
    
            <ImageButton
                android:id="@+id/nav_search"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_nav_search"
                android:background="?android:attr/selectableItemBackground"
                android:tint="?android:attr/textColorPrimary"
                android:contentDescription="@string/search"
                android:nextFocusDown="@+id/nav_history"
                android:nextFocusUp="@+id/nav_settings"
                android:nextFocusRight="@+id/category_recycler_view"
                android:focusable="true" />
    
            <ImageButton
                android:id="@+id/nav_history"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_nav_history"
                android:background="?android:attr/selectableItemBackground"
                android:tint="?android:attr/textColorPrimary"
                android:contentDescription="History" 
                android:nextFocusDown="@+id/nav_live"
                android:nextFocusUp="@+id/nav_search"
                android:nextFocusRight="@+id/category_recycler_view"
                android:focusable="true" />
    
            <ImageButton
                android:id="@+id/nav_live"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_nav_live"
                android:background="?android:attr/selectableItemBackground"
                android:tint="@color/bingetv_red"
                android:contentDescription="Live TV" 
                android:nextFocusDown="@+id/nav_movies"
                android:nextFocusUp="@+id/nav_history"
                android:nextFocusRight="@+id/category_recycler_view"
                android:focusable="true" />
    
            <ImageButton
                android:id="@+id/nav_movies"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_nav_movies"
                android:background="?android:attr/selectableItemBackground"
                android:tint="?android:attr/textColorPrimary"
                android:contentDescription="Movies" 
                android:nextFocusDown="@+id/nav_shows"
                android:nextFocusUp="@+id/nav_live"
                android:nextFocusRight="@+id/category_recycler_view"
                android:focusable="true" />
    
            <ImageButton
                android:id="@+id/nav_shows"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_nav_shows"
                android:background="?android:attr/selectableItemBackground"
                android:tint="?android:attr/textColorPrimary"
                android:contentDescription="Shows" 
                android:nextFocusDown="@+id/nav_recordings"
                android:nextFocusUp="@+id/nav_movies"
                android:nextFocusRight="@+id/category_recycler_view"
                android:focusable="true" />
    
            <ImageButton
                android:id="@+id/nav_recordings"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_nav_recordings"
                android:background="?android:attr/selectableItemBackground"
                android:tint="?android:attr/textColorPrimary"
                android:contentDescription="Recordings" 
                android:nextFocusDown="@+id/nav_favorites"
                android:nextFocusUp="@+id/nav_shows"
                android:nextFocusRight="@+id/category_recycler_view"
                android:focusable="true" />
    
            <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />
    
            <ImageButton
                android:id="@+id/nav_favorites"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/btn_star_big_on"
                android:background="?android:attr/selectableItemBackground"
                android:tint="@color/bingetv_red"
                android:contentDescription="@string/favorites"
                android:nextFocusDown="@+id/nav_settings"
                android:nextFocusUp="@+id/nav_recordings"
                android:nextFocusRight="@+id/category_recycler_view"
                android:focusable="true" />
    
            <ImageButton
                android:id="@+id/nav_settings"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_nav_settings"
                android:background="?android:attr/selectableItemBackground"
                android:tint="?android:attr/textColorPrimary"
                android:contentDescription="@string/settings"
                android:layout_marginBottom="16dp"
                android:nextFocusUp="@+id/nav_favorites"
                android:nextFocusRight="@+id/category_recycler_view"
                android:focusable="true" />
    
        </LinearLayout>
    </ScrollView>

    <View 
        android:layout_width="1dp" 
        android:layout_height="match_parent" 
        android:background="#CCCCCC"/>

    <!-- 2. Content Area (Categories + Grid + Preview) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Top Area: Preview Player (Hidden by default or shown on focus?) -> Let's make it visible on top right -->
        <FrameLayout
            android:id="@+id/top_preview_container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="visible"
            android:background="@android:color/black">
             
            <com.google.android.exoplayer2.ui.StyledPlayerView
                android:id="@+id/preview_player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />
                 
            <!-- Channel Info Overlay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_overlay"
                android:padding="16dp"
                android:layout_gravity="bottom">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    
                    <ImageView
                        android:id="@+id/preview_channel_logo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="fitCenter"
                        android:contentDescription="Channel Logo" />
                    
                    <TextView
                        android:id="@+id/preview_channel_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Channel Name"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>
                
                <TextView
                    android:id="@+id/preview_epg_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Now Playing"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="4dp" />
                
                <ProgressBar
                    android:id="@+id/preview_epg_progress"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="@color/bingetv_red"
                    android:progressBackgroundTint="@color/divider"
                    android:layout_marginBottom="4dp" />
                
                <TextView
                    android:id="@+id/preview_epg_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next: Upcoming Program"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </FrameLayout>

        <!-- Main Content Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- Category Sidebar -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_recycler_view"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:background="@color/background_secondary"
                android:padding="16dp"
                android:nextFocusLeft="@+id/nav_live"
                android:nextFocusRight="@+id/channel_recycler_view"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:descendantFocusability="afterDescendants"
                android:clipToPadding="false" />

            <!-- Channel Grid -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/channel_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp"
                    android:nextFocusLeft="@+id/category_recycler_view"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:descendantFocusability="afterDescendants"
                    android:clipToPadding="false" />

                <!-- Loading View -->
                <ProgressBar
                    android:id="@+id/loading_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/bingetv_red"
                    android:visibility="gone" />

                <!-- Error View -->
                <TextView
                    android:id="@+id/error_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/error"
                    android:visibility="gone" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
