<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused State (TV remote navigation) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" /> <!-- Semi-transparent white highlight -->
            <stroke android:width="2dp" android:color="@color/bingetv_red" /> <!-- Red border -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#66B22222" /> <!-- Darker red highlight -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Default (Unfocused) State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
