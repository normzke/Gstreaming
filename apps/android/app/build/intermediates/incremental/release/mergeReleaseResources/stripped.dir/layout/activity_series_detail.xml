<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical">

    <!-- Header / Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:background="#1A1A1A">

        <!-- Poster -->
        <ImageView
            android:id="@+id/series_poster"
            android:layout_width="140dp"
            android:layout_height="210dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_channel"
            android:background="@drawable/bg_card_focused" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp">

            <TextView
                android:id="@+id/series_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Series Title"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/series_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: 8.5"
                    android:textColor="@color/bingetv_red"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/series_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Action, Drama"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/series_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="2024"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <TextView
                android:id="@+id/series_director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Director: ..."
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/series_plot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:maxLines="5"
                android:ellipsize="end"
                android:text="Loading plot..."
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
                
            <TextView
                android:id="@+id/series_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cast: ..."
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:alpha="0.7" />

        </LinearLayout>
    </LinearLayout>

    <!-- Seasons List (Horizontal) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seasons_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clipToPadding="false" />

    <!-- Episodes List (Vertical) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/episodes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical" />

</LinearLayout>
