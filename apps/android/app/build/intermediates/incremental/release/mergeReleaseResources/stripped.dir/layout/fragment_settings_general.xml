<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/bingetv_red"
        android:layout_marginBottom="24dp" />

    <CheckBox
        android:id="@+id/check_auto_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto-start app on boot"
        android:textSize="18sp"
        android:padding="12dp"
        android:textColor="@color/text_primary"
        android:buttonTint="@color/bingetv_red"
        android:layout_marginBottom="16dp"
        android:focusable="true" />
        
    <CheckBox
        android:id="@+id/check_last_channel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn on last channel on app start"
        android:textSize="18sp"
        android:padding="12dp"
        android:textColor="@color/text_primary"
        android:buttonTint="@color/bingetv_red"
        android:layout_marginBottom="16dp"
        android:focusable="true" />

    <CheckBox
        android:id="@+id/check_pip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch to PiP mode on Home press"
        android:textSize="18sp"
        android:padding="12dp"
        android:textColor="@color/text_primary"
        android:buttonTint="@color/bingetv_red"
        android:layout_marginBottom="16dp"
        android:focusable="true" />

    <CheckBox
        android:id="@+id/check_confirm_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm exit by second press Back"
        android:textSize="18sp"
        android:padding="12dp"
        android:textColor="@color/text_primary"
        android:buttonTint="@color/bingetv_red"
        android:layout_marginBottom="16dp"
        android:focusable="true" />

</LinearLayout>
